<%- include('./partials/header.ejs') %>

    <!-- Desktop section -->
    <section class="w-full h-full p-4 md:flex items-center justify-between gap-4">
        <div class="w-full h-auto aspect-square bg-red-400">1</div>
        <div class="w-full h-auto aspect-square bg-green-400">2</div>
        <div class="w-full h-auto aspect-square bg-blue-400">3</div>
        <div class="w-full h-auto aspect-square bg-orange-400">4</div>
    </section>

    <!-- Mobile section -->
    <section class="w-full h-full flex flex-col md:hidden p-4 gap-2">
        <% if (events && events.length> 0) { %>
            <div class="w-full h-full flex flex-col gap-2">
                <% events.forEach(event=> { %>
                    <div class="w-full h-auto aspect-video rounded-xl flex flex-col border border-gray-200 p-2">
                        <!-- Header -->
                        <div class="flex items-center justify-between pb-2">
                            <h1 class="text-2xl font-semibold">
                                <%= event.title %>
                            </h1>

                        </div>

                        <!-- Description -->
                        <p class="font-thin mb-2">
                            <%= event.description %>
                        </p>

                        <!-- Details Grid -->
                        <div class="w-full grid grid-cols-2 gap-2 text-sm">
                            <!-- Date -->
                            <div class="flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                                </svg>
                                <p>
                                    <%= new Date(event.eventDate).toLocaleDateString('nl-NL') %>
                                </p>
                            </div>

                            <!-- Location -->
                            <div class="flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                                </svg>
                                <p>
                                    <%= event.location %>
                                </p>
                            </div>

                            <!-- Price -->
                            <div class="flex items-center gap-2 col-span-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M14.25 7.756a4.5 4.5 0 1 0 0 8.488M7.5 10.5h5.25m-5.25 3h5.25M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                </svg>
                                <p>
                                    <%= event.price ? `â‚¬${event.price}` : 'Gratis' %>
                                </p>
                            </div>
                        </div>
                        <a href="<%= event.ticketUrl || '#' %>"
                            class="flex items-center gap-1 px-8 py-2 text-sm bg-red-500 text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="size-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 0 1 0 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 0 1 0-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375Z" />
                            </svg>
                            <p>Koop ticket</p>
                        </a>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <div class="w-full h-full flex items-center justify-center">
                    <p class="text-gray-500">Geen evenementen gevonden.</p>
                </div>
                <% } %>
    </section>

    </main>