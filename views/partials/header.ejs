<!DOCTYPE html>
<html lang="nl" class="h-full">

<head>
  <title><%= typeof title !== 'undefined' ? title : 'Nedersanders.nl' %></title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/dist/css/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet" />
</head>

<body class="h-full flex flex-col">
  <!-- Navigation -->
  <nav class="bg-white/95 backdrop-blur-sm shadow-lg relative w-full top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-2">
        <div class="flex items-center">
          <div class="flex items-center justify-center w-20 h-auto">
            <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent"> <!-- TODO: Get PNG logo-->
              <img src="/images/NederSandersLogo.png" alt="Nedersanders Logo" class="w-full h-auto" />
            </a>
          </div>
        </div>
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-blue-600 font-semibold">Home</a>
          <a href="/tickets"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Tickets</a>
          <a href="/evenementen"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Evenementen</a>
          <a href="#contact"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Contact</a>
          <% if (typeof user !== 'undefined' && user) { %>
            <a href="/user/account" class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Mijn Account</a>
            <a href="/auth/logout" class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Uitloggen</a>
          <% } else { %>
            <a href="/auth/login" class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Inloggen</a>
          <% } %>
        </div>
        <div class="md:hidden">
          <button id="mobile-menu-toggle" class="text-gray-700 hover:text-blue-600 cursor-pointer">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu"
    class="fixed top-0 right-0 h-full w-80 bg-white shadow-xl z-[60] transform translate-x-full transition-transform duration-300 ease-in-out max-w-[90vw]">
    <div class="p-6">
      <!-- Header with close button -->
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-semibold text-gray-900">Menu</h2>
        <button id="mobile-menu-close"
          class="w-8 h-8 flex items-center justify-center text-gray-900 hover:text-blue-600 cursor-pointer">
          <span class="text-2xl">&times;</span>
        </button>
      </div>

      <!-- Menu Links -->
      <div class="space-y-6">
        <a href="/" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Home</a>
        <a href="/tickets" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Tickets</a>
        <a href="/evenementen" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Evenementen</a>
        <a href="#contact" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Contact</a>
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/user/account" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Mijn Account</a>
          <a href="/auth/logout" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Uitloggen</a>
        <% } else { %>
          <a href="/auth/login" class="block text-gray-900 text-xl hover:text-blue-600 transition-colors py-3 border-b border-gray-200">Inloggen</a>
        <% } %>
      </div>
    </div>
  </div>


  <!-- Main Content Area -->
  <main class="flex-1">