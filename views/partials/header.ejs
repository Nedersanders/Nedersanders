</head>

<body class="h-full flex flex-col">
  <!-- Navigation -->
  <nav class="bg-white/95 backdrop-blur-sm g relative w-full top-0 z-50;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-2">
        <div class="flex items-center">
          <div class="flex items-center justify-center w-20 h-auto">
            <a href="/" class="nav-logo-link"> <!-- TODO: Get PNG logo-->
              <img src="/images/NederSandersLogo.png" alt="Nedersanders Logo" class="nav-logo-img" />
            </a>
          </div>
        </div>
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-blue-600 font-semibold">Home</a>
          <a href="/tickets"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Tickets</a>
          <a href="/evenementen"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Evenementen</a>
          <a href="#contact"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Contact</a>
          <a href="/auth/login"
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200">Inloggen</a>
        </div>
        <div class="md:hidden">
          <button id="mobile-menu-toggle" class="text-gray-700 hover:text-blue-600 cursor-pointer">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu">
    <div class="p-6">
      <!-- Mobile menu header -->
      <div class="mobile-menu-header">
        <h2 class="mobile-menu-title">Menu</h2>
        <button id="mobile-menu-close" class="mobile-menu-close">
          <span class="text-2xl">&times;</span>
        </button>
      </div>

      <!-- Mobile menu links -->
      <div class="mobile-menu-links">
        <a href="/" class="mobile-menu-link">Home</a>
        <a href="/tickets" class="mobile-menu-link">Tickets</a>
        <a href="#features" class="mobile-menu-link">Features</a>
        <a href="#lineup" class="mobile-menu-link">Line-up</a>
        <a href="#contact" class="mobile-menu-link">Contact</a>
        <a href="/auth/login" class="mobile-menu-link">Inloggen</a>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <main class="flex-1">